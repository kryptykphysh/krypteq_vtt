<section id="flash-messages" class="section my-2">
  <% if flash.any? %>
    <% flash.each do |type, msg| %>
      <div
          class="animate__animated animate__bounceInRight notification mt-2 <%= type == "alert" ? "is-danger" : "is-info" %>"
          data-controller="dismissable">
        <button class="delete" data-action="click->dismissable#dismiss"></button>
        <%= msg %>
      </div>
    <% end %>
  <% end %>
</section>
