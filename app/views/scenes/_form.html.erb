<div id="scene-form" class="container">
  <%= form_with(model: scene) do |form| %>
    <% if scene.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(scene.errors.count, "error") %> prohibited this scene from being saved:</h2>

        <ul>
          <% scene.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, class: "label" %>
      <div class="control">
        <%= form.text_field :title, class: "input" %>
      </div>
    </div>

    <div class="level mt-2">
      <div class="level-left">
        <div class="control level-item">
          <%= form.submit nil, class: "button is-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
